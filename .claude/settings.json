{
  "permissions": {
    "allow": [
      "Bash(./scripts/prepare-release-branch.sh:*)",
      "Bash(./scripts/publish-release.sh:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/format-prettier.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/scripts/format-shfmt.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
